{
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
